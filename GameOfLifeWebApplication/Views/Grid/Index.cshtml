@model GameOfLifeWebApplication.Models.Grid
@{
    ViewBag.Title = "View";
}

@{ int rows = Model.grid.GetLength(0); }
@{ int columns = Model.grid.GetLength(1); }
@{ int count = 0;}

<p style="text-align:center">Generation = @Html.DisplayFor(modelItem => Model.generation)</p>

<table id="tab" class="center">
    @for (int i = 0; i < rows; i++)
    {
        <tr>
            @for (int j = 0; j < columns; j++)
            {
                <td onclick="myFunction(this.id)" id="@count" class="@Model.grid[i,j].ToString()" value="@Model.grid[i,j]"></td>
                count++;
            }
        </tr>
    }
</table>
<div style="text-align:center">
    <input type="button" onclick="reset()" class="btn-danger" value="Clear Board" />
    <input type="button" onclick="blinker()" class="btn-default" value="blinker" />
    <input type="button" onclick="toad()" class="btn-default" value="toad" />
    <input type="button" onclick="glider()" class="btn-default" value="glider" />
</div>

<script>
    function myFunction(id) {
        var element = document.getElementById(id);
        element.classList.toggle("False");
        element.classList.toggle("True");
    }

    function reset() {
        var x = document.getElementsByClassName('True');
        $(x).attr('class', 'False');
    }
    function blinker() {
        var x = document.getElementsByClassName('True');
        $(x).attr('class', 'False');
        $("#12, #13, #14, #35, #36, #37, #50, #51, #52, #87, #88, #89").attr('class', 'True');
    }

    function toad() {
        var x = document.getElementsByClassName('True');
        $(x).attr('class', 'False');
        $("#23, #24, #25, #32, #33, #34, #66, #67, #68, #75, #76, #77").attr('class', 'True');
    }

    function glider() {
        var x = document.getElementsByClassName('True');
        $(x).attr('class', 'False');
        $("#11, #22, #30, #31, #32").attr('class', 'True');
    }
</script>

